@using IdentityServer_WebApp.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-area="Identity" class="navbar-item is-primary" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-item">
        <button type="submit" class="button is-danger">Logout</button>
    </form>
}
else
{
    <a class="navbar-item" asp-area="Identity" asp-page="/Account/Login">Sign In</a>
    <span class="navbar-item"><a class="button is-danger is-wider" asp-area="Identity" asp-page="/Account/Register">Sign Up</a></span>
}